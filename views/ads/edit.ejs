<%- include("../layout/header") -%>

       
        <% if(ad){ %>
            <div class="form">
                <h1>Edit your ad</h1>
                <form action="/ads/<%=ad._id%>?_method=PUT" method="POST">
                  <div class="form-group">
                    <label for="date">Date added</label>
                    <input type="text" readonly class="form-control" id="date" value="<%= moment() %>" name="date" placeholder=" <%=moment().format('YYYY-MM-DD') %>">
                  </div>
                    <div class="form-group">
                        <label for="title">Title</label>
                        <input type="text" class="form-control" id="title" value="<%=ad.title%>" name="title" placeholder="<%=ad.title%>">
                      </div>
                     
                      <div class="form-group">
                        <label for="photoUrl">Photo url</label>
                        <input type="text" class="form-control" id="photoUrl" value="<%=ad.photoUrl%>" name="photoUrl" placeholder="<%=ad.photoUrl%>">
                      </div>
                      <div class="form-group">
                        <label for="description">Description</label>
                        <input type="description" class="form-control" id="description" value="<%=ad.description%>" name="description" placeholder="<%=ad.description%>">
                      </div>
                      <div class="form-group">
                        <label for="price">Price</label>
                        <input type="text" class="form-control" id="price" value="<%=ad.price%>" name="price" placeholder="<%=ad.price%>" >
                      </div>
                    <div class="form-group">
                        <label for="categories">Categories</label>
                        <input type="text" class="form-control" id="categories" value="<%=ad.categories%>" name="categories" placeholder="<%=ad.categories%>">
                      </div>
                    
                      <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="check" name="check">
                        <label class="form-check-label" for="check">I've read and agree to terms and conditions of using this site</label>
                      </div>
                      <button type="submit" class="btn btn-primary">Submit</button>
                </form>
                </div>
        <% } %>

<%- include("../layout/footer") -%>