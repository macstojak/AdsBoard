<%- include("../layout/header") -%>
<div class="form">
<form action="/ads" method="post">
    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" class="form-control" id="title" name="title" placeholder="Name your ad">
      </div>
     
      <div class="form-group">
        <label for="photoUrl">Photo url</label>
        <input type="text" class="form-control" id="photoUrl" name="photoUrl" placeholder="Enter url for the image">
      </div>
      <div class="form-group">
        <label for="description">Description</label>
        <input type="description" class="form-control" id="description" name="description" placeholder="Describe your product">
      </div>
      <div class="form-group">
        <label for="price">Price</label>
        <input type="text" class="form-control" id="price" name="price" placeholder="Price">
      </div>
   
      <div class="form-group">
        <label for="categories">Categories</label>
        <input type="text" class="form-control" id="categories" name="categories" placeholder="Categorize your product">
      </div>
      <div class="form-check">
        <input type="checkbox" class="form-check-input" id="check" name="check">
        <label class="form-check-label" for="check">I've read and agree to terms and conditions of using this site</label>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
</form>
</div>
<%- include("../layout/footer") -%>
